{
  "name": "githubgame",
  "version": "1.0.0",
  "description": "GitGame - A hilarious survival game about coding struggles. Only the best devs survive!",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:analyze": "vite build --mode analyze",
    "preview": "vite preview",
    "test": "node tests/run-tests.js",
    "test:watch": "node --test --watch tests/**/*.test.js",
    "test:coverage": "c8 --reporter=html --reporter=text --reporter=lcov node tests/run-tests.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "setup-hooks": "git config core.hooksPath .githooks && echo 'Git hooks configured successfully!'",
    "lighthouse": "lhci autorun"
  },
  "repository": {
    "type": "git",
    "url": "http://local_proxy@127.0.0.1:16835/git/justinnewbold/githubgame"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "phaser": "^3.90.0",
    "vite": "^7.2.2"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "c8": "^10.1.2",
    "rollup-plugin-visualizer": "^5.12.0",
    "@playwright/test": "^1.48.0",
    "@lhci/cli": "^0.14.0"
  }
}
